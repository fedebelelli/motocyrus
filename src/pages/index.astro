---
import Layout from '../layouts/Layout.astro';
import { brands } from '../data/brands';
---

<Layout title="MotoSpecs - Home">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold text-center mb-8 text-gray-900 dark:text-white">Welcome to MotoSpecs</h1>
    <p class="text-center text-gray-600 dark:text-gray-300 mb-12">Explore our collection of motorcycles by brand</p>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {brands.map(brand => (
        <a href={`/brands/${brand.id}`} class="block">
          <div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow">
            <div class="h-48 bg-gray-100 dark:bg-gray-700 flex items-center justify-center p-8">
              <img 
                src={brand.logo} 
                alt={`${brand.name} logo`} 
                class="max-h-full max-w-full object-contain"
              />
            </div>
            <div class="p-6">
              <h2 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">{brand.name}</h2>
              <p class="text-gray-600 dark:text-gray-300">{brand.description}</p>
            </div>
          </div>
        </a>
      ))}
    </div>
  </main>
</Layout>